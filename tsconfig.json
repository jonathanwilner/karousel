{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "none",
        "rootDir": "./src",
        "allowJs": false,
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}
